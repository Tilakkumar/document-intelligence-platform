# Database Configuration
MONGODB_URI=mongodb://admin:password123@mongo:27017/document_intelligence
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123
MONGODB_DATABASE=document_intelligence

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-ada-002

# Document Processing
TIKA_SERVER_URL=http://tika:9998
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=pdf,doc,docx,txt,jpg,png,xlsx,pptx

# Application Configuration
BACKEND_PORT=8080
FRONTEND_PORT=3000
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=86400

# File Storage
UPLOAD_PATH=/app/uploads
STORAGE_TYPE=local
# For cloud storage (optional)
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/application.log

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Environment
ENVIRONMENT=development
DEBUG=true

# Docker Configuration
COMPOSE_PROJECT_NAME=document-intelligence-platform